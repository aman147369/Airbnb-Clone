<% layout('boilerplate') -%>

    <body>
        <div class="row mt-3">
            <div class="col col-6 offset-2 ">
                <h3 class="mb-3"><%= listing.title %></h3>
                <div class="card show-card listing-card">
                    <img src="<%= listing.image %>" class="card-img-top" alt="listing_image">
                    <div class="card-body">
                        <br>
                        <p class="card-text">
                            <%= listing.description %>
                        </p>
                        <p class="card-text"><b>Price:</b> &nbsp; &#8377; <%= listing.price.toLocaleString("en-IN") %>
                        </p>
                        <p class="card-text"><b>Location:</b> &nbsp; <%= listing.location %>
                        </p>
                        <p class="card-text"><b>Country:</b> &nbsp; <%= listing.country %>
                        </p>
                    </div>
                </div>

                <div class="btns mb-3">
                    <button class="btn btn-dark"><a href="/listings/<%= listing._id %>/edit"
                            style="text-decoration: none;color: white;">Edit</a></button>
                    <form action="/listings/<%= listing._id %>?_method=DELETE" method="post">
                        <button class="btn btn-dark">Delete</button>
                    </form>
                </div>

                <div class=" mb-3">
                    <hr>
                    <h4>Leave a Review</h4>
                    <form action="/listings/<%= listing._id %>/reviews" method="post" novalidate class="needs-validation">
                        <div>
                            <label for="rating" class="form-label">Rating</label>
                            <input type="range" min="1" max="5" name="review[rating]" id="rating" class="form-range">
                        </div>
                        <div class="mb-2">
                            <label for="comment" class="form-label">Comments</label>
                            <textarea name="review[comment]" id="comment" rows="3" cols="15" class="form-control" required></textarea>
                            <div class="invalid-feedback">Please add some comments for review.</div>
                        </div>
                        <button class="btn btn-outline-dark">Submit</button>
                    </form>
                </div>
                <hr>


                <h4>All Reviews</h4>
                <div class="row">
                    <% for(let review of listing.reviews) {%>
                        <div class="col-5 card ms-4 mb-1 mt-1">
                                <div class="card-body">
                                    <h5 class="card-title">Jane Doe</h5>
                                    <p class="card-text"><%= review.comment %></p>
                                    <p class="card-text"><%= review.rating %> stars</p>
                                    <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" class="mb-2" method="post">
                                        <button class="btn btn-sm btn-dark">Delete</button>
                                    </form>
                                </div>
                        </div>
                        
                    <% } %>
                </div>


            </div>
        </div>


    </body>